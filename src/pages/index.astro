<style>

.shadow-text{
  text-shadow: 2px 2px var(--dark);
}

.parallax {
  /* Set a specific height */
  min-height: 500px;

  /* Create the parallax scrolling effect */
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.section{
  display: grid;
  place-items: center;
  align-items: center;
  min-height: 10vh;
  gap: 1.5rem;
  max-width: 60%;
  margin: 0 auto;
  margin-top: var(--margin-top-standart);
  grid-template-columns: repeat(5,1fr);
}

.grid-2-col{
  display: grid;
  place-items: center;
  align-items: center;
  min-height: 10vh;
  
  max-width: 60%;
  margin: 0 auto;
  margin-top: var(--margin-top-standart);
  grid-template-columns: 1fr 1fr;
  margin-bottom: 50px;
}
.tall{
  min-height: 30vw;
}

.section-text{
  color: var(--text);
  grid-column:span 2;
}
.section-image{
  grid-column:span 3;
}

/* mobile rules */
@media only screen and (max-width: 800px) {
  .section{
    grid-template-columns: 1fr;
  }
  .grid-2-col{
    grid-template-columns: 1fr;
  }
  .section-text{
    color: var(--text);
    grid-column:span 1;
    order: 1;
  }
  .section-image{
    grid-column:span 1;
  }
}

/* animations */
.hidden{
  opacity: 0;
  transition: all 1s ease;
}

.app-left{
  filter:blur(1px);
  transform: translateX(-25%);
}

.app-right{
  filter:blur(1px);
  transform: translateX(25%);
}


.loaded-el{
  transition: all 1s ease-in-out;
  opacity: 1;
  filter:blur(0);
  transform: translateX(0);
}
/* Style the tab */
.tab {
  margin: 0 auto;
  margin-top: var(--margin-top-standart);
  overflow: hidden;
  border: 1px solid #ccc;
  background-color: #f1f1f1;
  display: flex;
  justify-content: space-around;
  

}
#tab_container{
  margin: 0 auto;
  max-width: 80%;
  box-shadow: 0px 5px 50px 5px rgba(94, 94, 94, 0.7); 
}

/* Style the buttons inside the tab */
.tab button {
  background-color: inherit;
  float: left;
  border: none;
  outline: none;
  cursor: pointer;
  margin: 0;
  white-space: nowrap;
  padding:  16px 15%;
  transition: 0.3s;
  font-size: 17px;
}

/* Change background color of buttons on hover */
.tab button:hover {
  background-color: #ddd;
}

/* Create an active/current tablink class */
.tab button.active {
  background-color: #ccc;
}
/* Style the tab content */
.tabcontent {
  display: none;
  padding: 6px 12px;
  color: black;
  border-top: none;
  margin: 0 auto;
  background-color: white;
 
}
.divider{
    width: 60%;
    height: 1px;
    margin-right: 15px;
    margin-left: 15px;
    background-color: #fff;
}
.header_container{
  position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: start;
